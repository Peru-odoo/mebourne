<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_branch_from_sequence">
            <field name="name">res.branch.from.sequence</field>
            <field name="model">res.branch</field>
            <field name="inherit_id" ref="multi_branches.view_branch_from"/>
            <field name="arch" type="xml">
                <xpath expr="//form//div[hasclass('oe_title')]//h1" position="after">
                    <div class="o_row o_td_label">
                        <label for="code"/>
                    </div>
                    <div class="o_row">
                        <field name="code"/>
                        <field name="sequence_number_next"/>
                        <field name="sequence_id" required="0" attrs="{'readonly': 1}" groups="base.group_no_one"/>
                    </div>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="view_branch_tree_sequence">
            <field name="name">res.branch.tree.sequence</field>
            <field name="model">res.branch</field>
            <field name="inherit_id" ref="multi_branches.view_branch_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                    <field name="code"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="sequence_number_next"/>
                    <field name="sequence_id" required="0" attrs="{'readonly': 1}" groups="base.group_no_one"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>